{% extends "base.tpl.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="design/css/index.css" rel="stylesheet" />
{% endblock %}

{% block contents %}
    {% block search %}
        {% include "partials/search.tpl.twig" %}
    {% endblock %}
    <div id="menu" class="btn-group-vertical" role="group">
        {% for href in siteBar|keys if siteBar[href] != title %}
            <a class="btn btn-secondary" href="{{ href }}"> {{ siteBar[href] }}</a>
        {% endfor %}
    </div>
    <p>
        {{ article_1|raw }}
    </p>
    <img id="image_1" src="{{ image_1_src }}" alt="image:)">
    <p>
        {{ article_2 }}
    </p>
    <ol>
        {% for source in sources %}
            <li>{{ source|raw }}</li>
        {% endfor %}
    </ol>
{% endblock %}
{% block toMain %}
    <div id="toMain">
        <a class="btn btn-primary" href="{{ up_url }}">To the beginning</a>
    </div>
{% endblock %}