{% extends "base.tpl.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="design/css/index.css" rel="stylesheet" />
{% endblock %}

{% block contents %}
    {% block search %}
        {% include "partials/search.tpl.twig" %}
    {% endblock %}
    <div id="menu" class="btn-group-vertical" role="group">
        {% for couple in siteBar if couple.title != title %}
            <a class="btn btn-secondary" href="{{ couple.page }}"> {{ couple.title }}</a>
        {% endfor %}
    </div>
    <p>
        {{ article_1|raw }}
    </p>
    <img id="image_1" src="design/images/red.jpg" alt="image:)">
    <p>
        {{ article_2 }}
    </p>
    <ol>
        {% for source in sources %}
            <li>{{ source.name|raw }}</li>
        {% endfor %}
    </ol>
{% endblock %}
{% block toMain %}
    <div id="toMain">
        <a class="btn btn-primary" href="index.php">To the beginning</a>
    </div>
{% endblock %}