{% extends "base.tpl.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="design/css/MVCConception/{{ style }}/MVCConception.css">
    <link rel="stylesheet" href="design/css/MVCConception/MVCConception.css">
{% endblock %}

{% block contents %}
    <img id="image_1" src="{{ image_1_src }}" alt="">
    {% for article in articles %}
        <p>
            {{ article.name|raw }}
        </p>
        {% if loop.index == 2 %}
            <ol>
                {% for element in MVC_scenario_list %}
                    <li>
                        {{ element }}
                    </li>
                {% endfor %}
            </ol>

            <h3>{{ title_1 }}</h3>

            <ol class="list-group">
                {% for element in MVC_advantages_list %}
                    <li class="list-group-item list-group-item-action">
                        {{ element }}
                    </li>
                {% endfor %}
            </ol>
            <img id="image_2" src="{{ image_2_src }}" alt="image :)">
        {% endif %}
    {% endfor %}

    <form method="POST">
        {% for radioValue in radiobuttonValues %}
            <label for="radio{{ radioValue }}">Style #{{ radioValue }}</label>
            <input
                {% if loop.index == style %}
                    checked
                {% endif %}
            id="radio{{ radioValue }}" type="radio" value="{{ radioValue }}" name="styleMode">
        {% endfor %}
    </form>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="design/js/radioSubmit.js"></script>
{% endblock %}